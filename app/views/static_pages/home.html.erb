<% provide(:name, "Email Archive") %>
<h1>Grinnell CS Email Archive</h1>
<% @search = Message.search(params[:q]) %>
<%= search_form_for @search, url: search_path do |f| %>

  <%= f.label :author %>
  <%= f.search_field :author_cont %>
  <br/>
  <%= f.label :subject %>
  <%= f.search_field :subject_cont %>
  <br/>
  <%= f.label :content %>
  <%= f.search_field :content_cont %>
  <br/>
  <%= f.submit %>
  <br/>
  <br/>
<% end %>
  
  </br>
  <h3>Tags</h3>

<%= link_to "CS Extra", messages_url << "?tag=csextra", { :class=>"tags-home" } %>
<%= link_to "CS Table", messages_url + "?tag=csstable", { :class=>"tags-home" } %>
<%= link_to "Internship", messages_url + "?tag=internship", { :class=>"tags-home" } %>
<%= link_to "Job", messages_url + "?tag=job", { :class=>"tags-home" } %>
<%= link_to "Misc.", messages_url + "?tag=misc", { :class=>"tags-home" } %>
