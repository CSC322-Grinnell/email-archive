<p id="notice"><%= notice %></p>

<h1 style="text-align:center;"><%= @message.subject %></h1>

<div style = "text-align:center;">
  <%= link_to 'Home', root_path %>
</div>

<br/>

<mcontainer>
<br style="clear:both;"/>

<strong style="text-align:left;float:left;padding-bottom:8px"> <%= @message.author %> </strong>
<span style="text-align:right;float:right;"><%= @message.created_at %></span>

<hr style="clear:both;"/>

<ccontainer>
  <%= @message.content.lstrip %>
</ccontainer>

<div style="text-align:left;float:left;">
  <strong>Tags:</strong>
  <% @message.tag_list.each do |tag| %>
    <tags>
      <%= link_to tag, messages_url + "?tag=" + tag, { :class=>"tags" }%> 
    </tags>
  <% end %>
</div>
<span style="text-align:right;float:right;">
<a href="javascript:history.back()">Back</a>
</span>
</mcontainer>

<%=render 'messages/footer' %>

</div>